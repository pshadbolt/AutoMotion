<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ssj.prototype.prototype.ui.VehicleActivity"
    tools:showIn="@layout/activity_vehicle">

    <RelativeLayout
        android:onClick="openMaintenanceSchedule"
        android:id="@+id/layout_maintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">

        <ImageButton
            android:id="@+id/image_maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@null"
            android:src="@drawable/ic_assignment_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_maintenance"
            android:text="Maintenance Schedule"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_maintenance"
        android:layout_marginTop="20sp">

        <ImageButton
            android:id="@+id/image_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@null"
            android:src="@drawable/ic_build_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_repair"
            android:text="Repair History"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_recall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_repair"
        android:layout_marginTop="20sp">

        <ImageButton
            android:id="@+id/image_recall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@null"
            android:src="@drawable/ic_warning_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_recall"
            android:text="Recall Information"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:onClick="openVehicleSpecs"
        android:id="@+id/layout_specs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_recall"
        android:layout_marginTop="20sp">

        <ImageButton
            android:id="@+id/image_specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@null"
            android:src="@drawable/ic_zoom_in_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_specs"
            android:text="Vehicle Specs"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_specs"
        android:layout_marginTop="20sp">

        <ImageButton
            android:id="@+id/image_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@null"
            android:src="@drawable/ic_camera_alt_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_photos"
            android:text="Photos"
            android:textSize="24sp" />

    </RelativeLayout>


</RelativeLayout>
